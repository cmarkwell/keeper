{
    "extends": [
        "standard",
        "standard-jsx",
        "standard-react"
    ],
    "env": {
        "browser": true,
        "webextensions": true
    },
    "rules": {
        "comma-dangle": ["error", "always-multiline"],
        "indent": ["error", 4, {
            "SwitchCase": 1
        }],
        "multiline-ternary": "off",
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4],
        "react/prop-types": "off",
        "react/react-in-jsx-scope": "off",
        "semi": ["error", "always"],
        "space-before-function-paren": ["error", {
            "anonymous": "never",
            "asyncArrow": "always",
            "named": "never"
        }]
    }
}